{
  "name": "Scraper",
  "version": "1.0",
  "description": "Web scraping tool made as part of the bachelor's thesis.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "downloads"
  ],
  "background": {
    "page": "src/background/background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "src/contentScripts/contentScript.css",
        "src/contentScripts/previewTable/previewTable.css"
      ],
      "js": [
        "src/contentScripts/contentScript.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Scraper",
    "default_icon": {
      "16": "scraper.png",
      "32": "scraper.png",
      "48": "scraper.png",
      "128": "scraper.png"
    }
  },
  "icons": {
    "16": "scraper.png",
    "32": "scraper.png",
    "48": "scraper.png",
    "128": "scraper.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
    "src/*.js",
    "src/*.html"
  ]
}