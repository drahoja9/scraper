{
  "name": "Bachelor thesis",
  "version": "0.1",
  "description": "To be done...",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "src/constants.js",
      "src/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "src/contentScripts/contentScript.css"
      ],
      "js": [
        "lib/js/jquery-3.3.1.min.js",
        "src/constants.js",
        "src/contentScripts/highlighter.js",
        "src/contentScripts/textHighlighter.js",
        "src/contentScripts/controller.js",
        "src/contentScripts/domNavigator.js",
        "src/contentScripts/contentScript.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "To be done...",
    "default_icon": {
      "16": "icon512.png",
      "32": "icon512.png",
      "48": "icon512.png",
      "128": "icon512.png"
    }
  },
  "icons": {
    "16": "icon512.png",
    "32": "icon512.png",
    "48": "icon512.png",
    "128": "icon512.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
    "src/mainPanel/mainPanel.html"
  ]
}